#include <stdio.h>

int main() {
    int num, count = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    // Handle 0 separately
    if (num == 0) {
        count = 1;
    } else {
        // Make number positive if it's negative
        if (num < 0) {
            num = -num;
        }
        while (num != 0) {
            num = num / 10; // Remove last digit
            count++;
        }
    }

    printf("Number of digits: %d\n", count);

    return 0;
}
