#include <stdio.h>
#include <string.h>

int main() {
    int n, i, found = 0;
    char item[50];

    // Sample data: items and prices
    char items[5][50] = {"Apple", "Banana", "Milk", "Bread", "Eggs"};
    float prices[5] = {50.0, 20.0, 40.0, 30.0, 10.0};

    printf("Enter the name of the item to search: ");
    scanf("%s", item);

    // Search for the item
    for(i = 0; i < 5; i++) {
        if(strcmp(item, items[i]) == 0) {
            printf("The price of %s is %.2f\n", items[i], prices[i]);
            found = 1;
            break;
        }
    }

    if(!found) {
        printf("Item not found in the shop.\n");
    }

    return 0;
}
