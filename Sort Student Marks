#include <stdio.h>

int main() {
    int n, i, j, temp;

    // Ask for number of students
    printf("Enter number of students: ");
    scanf("%d", &n);

    int marks[n];

    // Input marks
    printf("Enter marks of %d students:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &marks[i]);
    }

    // Sorting marks using bubble sort
    for(i = 0; i < n - 1; i++) {
        for(j = 0; j < n - i - 1; j++) {
            if(marks[j] > marks[j + 1]) {  // Swap if out of order
                temp = marks[j];
                marks[j] = marks[j + 1];
                marks[j + 1] = temp;
            }
        }
    }

    // Display sorted marks
    printf("\nMarks in ascending order:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", marks[i]);
    }
    printf("\n");

    return 0;
}
