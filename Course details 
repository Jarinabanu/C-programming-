#include <stdio.h>

struct Course
{
    int courseId;
    char courseName[50];
    char instructor[50];
    int duration;   // duration in hours
    float fees;
};

int main()
{
    struct Course c;

    printf("Enter Course ID: ");
    scanf("%d", &c.courseId);

    printf("Enter Course Name: ");
    scanf(" %[^\n]", c.courseName);

    printf("Enter Instructor Name: ");
    scanf(" %[^\n]", c.instructor);

    printf("Enter Course Duration (in hours): ");
    scanf("%d", &c.duration);

    printf("Enter Course Fees: ");
    scanf("%f", &c.fees);

    printf("\n--- Course Details ---\n");
    printf("Course ID      : %d\n", c.courseId);
    printf("Course Name    : %s\n", c.courseName);
    printf("Instructor     : %s\n", c.instructor);
    printf("Duration       : %d hours\n", c.duration);
    printf("Fees           : %.2f\n", c.fees);

    return 0;
}
