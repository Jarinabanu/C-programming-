#include <stdio.h>
#include <string.h>

// Define structure for a record
struct Patient {
    int id;
    char name[50];
    int age;
};

int main() {
    int n, i, searchId;
    struct Patient patients[100];  // Array of structures

    printf("Enter number of patients: ");
    scanf("%d", &n);

    // Input patient details
    for(i = 0; i < n; i++) {
        printf("\nEnter details for patient %d:\n", i + 1);
        printf("ID: ");
        scanf("%d", &patients[i].id);
        printf("Name: ");
        scanf(" %[^\n]", patients[i].name);  // Read string with spaces
        printf("Age: ");
        scanf("%d", &patients[i].age);
    }

    // Ask which record to update
    printf("\nEnter the ID of the patient to update: ");
    scanf("%d", &searchId);

    // Search for the record by ID
    int found = 0;
    for(i = 0; i < n; i++) {
        if(patients[i].id == searchId) {
            found = 1;
            printf("\nEnter new details for patient ID %d:\n", searchId);
            printf("Name: ");
            scanf(" %[^\n]", patients[i].name);
            printf("Age: ");
            scanf("%d", &patients[i].age);

            // Display updated record
            printf("\nUpdated Record:\n");
            printf("ID: %d\n", patients[i].id);
            printf("Name: %s\n", patients[i].name);
            printf("Age: %d\n", patients[i].age);
            break;
        }
    }

    if(!found) {
        printf("\nPatient with ID %d not found.\n", searchId);
    }

    return 0;
}
