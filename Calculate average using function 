#include <stdio.h>

// Function to calculate average
float calculateAverage(int arr[], int n)
{
    int sum = 0;
    for(int i = 0; i < n; i++)
    {
        sum += arr[i];
    }
    return (float)sum / n;
}

int main()
{
    int n;
    float avg;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d numbers:\n", n);
    for(int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    avg = calculateAverage(arr, n);

    printf("Average = %.2f", avg);

    return 0;
}