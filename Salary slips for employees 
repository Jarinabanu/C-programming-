#include <stdio.h>

int main() {
    char name[50];
    int empID;
    float basic, hra, da, tax, netSalary;

    // Input employee details
    printf("Enter Employee Name: ");
    scanf(" %[^\n]s", name);  // To read full name including spaces

    printf("Enter Employee ID: ");
    scanf("%d", &empID);

    printf("Enter Basic Salary: ");
    scanf("%f", &basic);

    // Calculate allowances and deductions
    hra = basic * 0.20; // House Rent Allowance 20% of basic
    da = basic * 0.10;  // Dearness Allowance 10% of basic
    tax = basic * 0.05; // Tax 5% of basic

    netSalary = basic + hra + da - tax;

    // Print Salary Slip
    printf("\n-------------------------------\n");
    printf("         SALARY SLIP\n");
    printf("-------------------------------\n");
    printf("Employee Name : %s\n", name);
    printf("Employee ID   : %d\n", empID);
    printf("-------------------------------\n");
    printf("Basic Salary  : %.2f\n", basic);
    printf("HRA (20%%)     : %.2f\n", hra);
    printf("DA (10%%)      : %.2f\n", da);
    printf("Tax (5%%)      : %.2f\n", tax);
    printf("-------------------------------\n");
    printf("Net Salary    : %.2f\n", netSalary);
    printf("-------------------------------\n");

    return 0;
}