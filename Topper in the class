
#include <stdio.h>
#include <string.h>

int main() {
    int n, i;
    printf("Enter the number of students: ");
    scanf("%d", &n);

    char names[n][50];
    int marks[n];

    // Input names and marks
    for(i = 0; i < n; i++) {
        printf("\nEnter name of student %d: ", i + 1);
        scanf("%s", names[i]);
        printf("Enter marks of %s: ", names[i]);
        scanf("%d", &marks[i]);
    }

    // Find topper
    int maxMarks = marks[0];
    int topperIndex = 0;
    for(i = 1; i < n; i++) {
        if(marks[i] > maxMarks) {
            maxMarks = marks[i];
            topperIndex = i;
        }
    }

    printf("\nTopper of the class is %s with %d marks.\n", names[topperIndex], maxMarks);

    return 0;
}
