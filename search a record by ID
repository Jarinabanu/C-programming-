#include <stdio.h>
#include <string.h>

// Define a structure for a record (e.g., a student)
struct Record {
    int id;
    char name[50];
    int age;
};

int main() {
    int n, searchId, found = 0;

    // Ask user for the number of records
    printf("Enter number of records: ");
    scanf("%d", &n);

    struct Record records[n];

    // Input records
    for (int i = 0; i < n; i++) {
        printf("\nEnter details for record %d:\n", i + 1);
        printf("ID: ");
        scanf("%d", &records[i].id);
        printf("Name: ");
        scanf(" %[^\n]", records[i].name); // reads string with spaces
        printf("Age: ");
        scanf("%d", &records[i].age);
    }

    // Ask for ID to search
    printf("\nEnter ID to search: ");
    scanf("%d", &searchId);

    // Search for the record
    for (int i = 0; i < n; i++) {
        if (records[i].id == searchId) {
            printf("\nRecord found:\n");
            printf("ID: %d\n", records[i].id);
            printf("Name: %s\n", records[i].name);
            printf("Age: %d\n", records[i].age);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("\nRecord with ID %d not found.\n", searchId);
    }

    return 0;
}
