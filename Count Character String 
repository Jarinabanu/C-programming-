#include <stdio.h>

int main() {
    char str[100];
    int count = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Count characters
    while (str[count] != '\0') {
        if (str[count] != '\n') {  // ignore newline added by fgets
            count++;
        } else {
            break;
        }
    }

    printf("Number of characters: %d\n", count);

    return 0;
}
