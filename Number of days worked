#include <stdio.h>

int main() {
    int daysInMonth, i, worked, totalWorked = 0;

    // Ask user for the number of days in the month
    printf("Enter the number of days in the month: ");
    scanf("%d", &daysInMonth);

    // Loop for each day
    for(i = 1; i <= daysInMonth; i++) {
        printf("Did you work on day %d? (1 = Yes, 0 = No): ", i);
        scanf("%d", &worked);

        if(worked == 1) {
            totalWorked++;
        }
    }

    // Display total days worked
    printf("\nTotal number of days worked in the month: %d\n", totalWorked);

    return 0;
}
