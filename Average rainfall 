#include <stdio.h>

int main() {
    int n, i;
    float rainfall, total = 0.0, average;

    // Ask user for number of months
    printf("Enter the number of months: ");
    scanf("%d", &n);

    // Input rainfall for each month
    for(i = 1; i <= n; i++) {
        printf("Enter rainfall for month %d (in mm): ", i);
        scanf("%f", &rainfall);
        total += rainfall;  // Add to total rainfall
    }

    // Calculate average
    average = total / n;

    // Display result
    printf("\nTotal rainfall: %.2f mm\n", total);
    printf("Average rainfall: %.2f mm\n", average);

    return 0;
}
